<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="108dp"
  android:padding="8dp"
  android:orientation="vertical">

  <ImageView
    android:id="@+id/image_list_repo_avatar"
    android:layout_width="wrap_content"
    android:layout_height="64dp"
    android:importantForAccessibility="no"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:src="@tools:sample/avatars"/>

  <TextView
    android:id="@+id/txt_list_repo_title"
    android:textStyle="bold"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="8dp"
    android:ellipsize="end"
    android:maxLines="1"
    android:textSize="16sp"
    app:layout_constraintBottom_toTopOf="@+id/txt_list_repo_description"
    app:layout_constraintEnd_toStartOf="@+id/txt_list_repo_stars"
    app:layout_constraintStart_toEndOf="@+id/image_list_repo_avatar"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="Ugdemy/KotlinUdemy"/>

  <TextView
    android:id="@+id/txt_list_repo_description"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:ellipsize="end"
    android:maxLines="2"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/image_list_repo_avatar"
    app:layout_constraintTop_toBottomOf="@+id/txt_list_repo_title"
    tools:text="Learn how to make online games, and apps for Android O, like PokÃ©mon , twitter,Tic Tac Toe, and notepad using Kotlin"/>

  <TextView
    android:id="@+id/txt_list_repo_stars"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:drawablePadding="8dp"
    android:drawableStart="@drawable/ic_star"
    android:gravity="center"
    app:layout_constraintBottom_toTopOf="@+id/txt_list_repo_description"
    app:layout_constraintEnd_toStartOf="@+id/txt_list_repo_fork"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="589"/>

  <TextView
    android:id="@+id/txt_list_repo_fork"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:drawablePadding="8dp"
    android:drawableStart="@drawable/ic_repo_forked"
    app:layout_constraintBottom_toTopOf="@+id/txt_list_repo_description"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="3,308"/>

</androidx.constraintlayout.widget.ConstraintLayout>
